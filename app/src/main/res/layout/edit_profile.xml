<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/tv_heading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorGray"
        android:textColor="@color/colorWhite"
        android:gravity="center"
        android:fontFamily="@font/montserrat"
        android:padding="14dp"
        android:textSize="15sp"
        android:text="ENTER DETAILS BELOW TO EDIT YOUR PROFILE"/>



    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="18dp"
        android:layout_below="@+id/tv_heading"
        android:padding="16dp">


        <TextView
            android:id="@+id/tv_full_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Full Name"
            android:fontFamily="@font/montserrat"
            android:textColor="@color/color_txt" />

        <EditText
            android:id="@+id/edit_full_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_full_name"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/montserrat"
            android:textColor="@color/colorGray"
            android:background="@drawable/edittext_background" />


        <RadioGroup
            android:id="@+id/radio_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/edit_full_name"
            android:layout_marginTop="14dp"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/tv_gender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Gender"
                android:fontFamily="@font/montserrat"
                android:textColor="@color/color_txt" />


            <RadioButton
                android:id="@+id/rb_super_brand"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:buttonTint="@color/color_txt"
                android:textColor="@color/color_txt"
                android:fontFamily="@font/montserrat"
                android:checked="true"
                android:text="Male" />

            <RadioButton
                android:id="@+id/rb_crown_brand"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:textColor="@color/color_txt"
                android:fontFamily="@font/montserrat"
                android:buttonTint="@color/colorPrimary"
                android:text="Female" />

        </RadioGroup>


        <TextView
            android:id="@+id/tv_label_date_of_birth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/radio_group"
            android:layout_marginTop="14dp"
            android:fontFamily="@font/montserrat"
            android:text="Date of Birth"
            android:textColor="@color/color_txt" />


        <RelativeLayout
            android:id="@+id/rl_date_of_birth"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_label_date_of_birth"
            android:layout_marginTop="8dp"
            android:background="@drawable/edittext_background"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/tv_date_of_birth"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:background="@android:color/transparent"
                android:padding="3.5dp"
                android:fontFamily="@font/montserrat"
                android:textColor="@color/color_txt"
                android:text="08/09/1995" />


            <ImageView
                android:id="@+id/iv_calendar"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:src="@drawable/calendar_icon_user" />


        </RelativeLayout>


        <TextView
            android:id="@+id/tv_mobile_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rl_date_of_birth"
            android:layout_marginTop="14dp"
            android:fontFamily="@font/montserrat"
            android:text="Mobile No."
            android:textColor="@color/color_txt" />

        <EditText
            android:id="@+id/edit_mobile_no"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_mobile_no"
            android:layout_marginTop="8dp"
            android:textColor="@color/colorGray"
            android:fontFamily="@font/montserrat"
            android:background="@drawable/edittext_background" />


        <TextView
            android:id="@+id/tv_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/edit_mobile_no"
            android:layout_marginTop="14dp"
            android:fontFamily="@font/montserrat"
            android:text="Email"
            android:textColor="@color/color_txt" />

        <EditText
            android:id="@+id/edit_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_email"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/montserrat"
            android:textColor="@color/colorGray"
            android:background="@drawable/edittext_background" />


        <TextView
            android:id="@+id/tv_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/edit_email"
            android:layout_marginTop="14dp"
            android:text="Location"
            android:fontFamily="@font/montserrat"
            android:textColor="@color/color_txt" />


        <EditText
            android:id="@+id/edit_location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_location"
            android:layout_marginTop="8dp"
            android:textColor="@color/color_txt"
            android:fontFamily="@font/montserrat"
            android:background="@drawable/edittext_background" />




        <RelativeLayout
            android:id="@+id/rl_update_profile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/edit_location"
            android:layout_marginTop="35dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:background="@drawable/button_red_background"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_update_profile"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentLeft="true"
                android:layout_centerInParent="true"
                android:padding="5dp"
                android:src="@drawable/button_ellipse_arrow_icon_user" />

            <Button
                android:id="@+id/btn_update_profile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorWhite"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:fontFamily="@font/montserrat"
                android:textStyle="bold"
                android:textSize="15sp"
                android:background="@android:color/transparent"
                android:text="Update Profile"/>


        </RelativeLayout>



    </RelativeLayout>

    </ScrollView>


</RelativeLayout>