<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorProfileBg">

    <LinearLayout
        android:layout_width="match_parent"
        android:background="@color/colorGray"
        android:layout_height="40dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/enter_detail_below"
            android:textSize="15dp"
            android:layout_gravity="center"
            android:gravity="center_horizontal"
            android:textColor="@android:color/white"/>

    </LinearLayout>


    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="false"
        >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:orientation="vertical">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/color_txt"
            android:text="@string/full_name"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:background="@drawable/rectangular_bg"
            android:fontFamily="@font/montserrat"
            android:layout_marginTop="5dp"
            android:textSize="14sp"
            android:hint="Jason Smith"/>






        <RadioGroup
            android:id="@+id/radio_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/tv_gender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Gender"
                android:fontFamily="@font/montserrat"
                android:textColor="@color/color_txt" />


            <RadioButton
                android:id="@+id/rb_super_brand"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:buttonTint="@color/colorGray"
                android:textColor="@color/colorGray"
                android:fontFamily="@font/montserrat"
                android:checked="true"
                android:text="Male" />

            <RadioButton
                android:id="@+id/rb_crown_brand"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:textColor="@color/colorGray"
                android:fontFamily="@font/montserrat"
                android:buttonTint="@color/colorGray"
                android:text="Female" />

        </RadioGroup>

        <TextView
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/color_txt"
            android:text="@string/dob"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="@drawable/rectangular_bg">

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="08/09/1995"
                android:background="@null"
                android:fontFamily="@font/montserrat"
                android:layout_alignParentLeft="true"
                android:textSize="14sp"
                android:padding="5dp"/>

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/calendar_icon_user"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:layout_marginRight="10dp"
                />

        </RelativeLayout>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/mobile_number"
            android:textColor="@color/color_txt"
            android:fontFamily="@font/montserrat"
            android:layout_marginTop="10dp"
            />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:inputType="number"
            android:fontFamily="@font/montserrat"
            android:background="@drawable/rectangular_bg"
            android:layout_marginTop="5dp"
            android:textSize="14sp"
            android:hint="1234567890"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/email"
            android:fontFamily="@font/montserrat"
            android:textColor="@color/color_txt"
            android:layout_marginTop="10dp"
            />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:inputType="textEmailAddress"
            android:fontFamily="@font/montserrat"
            android:textSize="14sp"
            android:background="@drawable/rectangular_bg"
            android:layout_marginTop="5dp"
            android:hint="jamessmith@gmail.com"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/location"
            android:textColor="@color/color_txt"
            android:fontFamily="@font/montserrat"
            android:layout_marginTop="10dp"
           />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:background="@drawable/rectangular_bg"
            android:fontFamily="@font/montserrat"
            android:layout_marginTop="5dp"
            android:textSize="14sp"
            android:hint="101, Main street"/>

        <LinearLayout
            android:id="@+id/ll_click_to_login"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:layout_marginTop="40dp"

            android:background="@drawable/button_user">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:paddingTop="15dp"
                android:gravity="center_horizontal"
                android:layout_gravity="center_horizontal"
                android:fontFamily="@font/montserrat"
                android:layout_marginLeft="120dp"
                android:textColor="@android:color/white"
                android:text="@string/update_profile"
                />

        </LinearLayout>


    </LinearLayout>

    </android.support.v4.widget.NestedScrollView>


</LinearLayout>