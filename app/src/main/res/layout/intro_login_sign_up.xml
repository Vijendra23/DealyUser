<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/intro_background"
    android:orientation="vertical">

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btn_skip"
        android:layout_marginBottom="36dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="60dp"
        android:orientation="vertical">


    <ImageView
        android:layout_width="200dp"
        android:layout_height="75dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="45dp"
        android:src="@drawable/login_signup_logo_user"/>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:gravity="center_horizontal"
            android:text="@string/get_started"
            android:textColor="@android:color/white"
            android:textSize="24sp"
            android:fontFamily="@font/montserrat" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="5dp"
        android:src="@drawable/login_signup_heading_separator_user" />

    <RelativeLayout
        android:id="@+id/ll_new_user_sign_up"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/button_red_background"
        android:padding="5dp">


        <ImageView
            android:id="@+id/iv_login_icon"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/login_signup_login_btn_ellipse_icon_user" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_toRightOf="@+id/iv_login_icon"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:text="@string/new_user_sign_up_now"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:fontFamily="@font/montserrat"
                android:textStyle="bold" />

        </RelativeLayout>


    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/ll_already_member_sign_in"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/button_dark_red_background"
        android:padding="5dp">

        <ImageView
            android:id="@+id/iv_already_user"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/login_signup_signup_btn_ellipse_icon_user"/>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:layout_toRightOf="@+id/iv_already_user">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:text="@string/already_member_sign_in"
                android:textColor="@android:color/white"
                android:fontFamily="@font/montserrat"
                android:textSize="16sp"
                android:textStyle="bold" />


        </RelativeLayout>


    </RelativeLayout>


    <TextView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="24dp"
        android:background="@drawable/circular_bg"
        android:gravity="center"
        android:text="@string/or"
        android:textColor="@color/colorDarkRed"
        android:textSize="24sp"
        android:fontFamily="@font/montserrat"
        android:textStyle="normal" />


    <RelativeLayout
        android:id="@+id/ll_sign_in_using_fb"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/button_blue_background"
        android:padding="5dp">

        <ImageView
            android:id="@+id/fb_icon"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/login_signup_ellipse_fb_icon_user"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:layout_toRightOf="@+id/fb_icon">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:text="@string/signin_using_fb"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:fontFamily="@font/montserrat"
                android:textStyle="bold" />

        </RelativeLayout>


    </RelativeLayout>


    </LinearLayout>

    </ScrollView>

    <TextView
        android:id="@+id/btn_skip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#000"
        android:padding="10dp"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:text="@string/skip"
        android:fontFamily="@font/montserrat"
        android:textColor="@android:color/white"
        android:textSize="18sp"/>


</RelativeLayout>

