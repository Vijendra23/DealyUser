<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:card_view="http://schemas.android.com/tools"
    android:background="@color/colorLightGray"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <TextView
        android:id="@+id/tv_heading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/colorWhite"
        android:background="@color/colorGray"
        android:padding="12dp"
        android:gravity="center"
        android:text="BURGER BAR"/>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout

                    android:layout_width="match_parent"
                    android:background="@color/colorGray"
                    android:orientation="horizontal"
                    android:layout_height="60dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:text="@string/burger_bar1"
                        android:gravity="center"
                        android:textColor="@android:color/white"
                        android:textSize="16sp"
                        android:fontFamily="@font/montserrat"
                        android:layout_gravity="center"/>


                </LinearLayout>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:id="@+id/img"
                    android:src="@drawable/order_confirmation_main_image_user"
                    android:scaleType="centerCrop"
                    />

                <LinearLayout
                    android:layout_width="105dp"
                    android:layout_height="105dp"
                    android:layout_marginTop="150dp"
                    android:gravity="center"
                    android:layout_marginLeft="120dp"
                    android:background="@drawable/circular_img"
                    >

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_gravity="center"

                        android:src="@drawable/explore_recommended_vendor_img01_user"/>

                </LinearLayout>


            </FrameLayout>
            <LinearLayout
                android:id="@+id/ll_trans_favorite_stores_fpllowed"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/fl_profile"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="20dp"
                android:orientation="horizontal"
                android:weightSum="3">


                <LinearLayout

                    android:id="@+id/ll_deal_posted"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">


                    <TextView

                        android:id="@+id/tv_transaction_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/textview_background"
                        android:gravity="center"
                        android:text="59"
                        android:textColor="@color/colorWhite"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/tv_transaction"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="DEALS POSTED"
                        android:textColor="@color/color_txt"
                        android:textSize="10sp" />


                </LinearLayout>

                <TextView
                    android:id="@+id/tv_vertical_line"
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/colorGray"
                    android:gravity="center" />


                <LinearLayout
                    android:id="@+id/ll_favorites_deals"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">


                    <LinearLayout
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:background="@drawable/textview_background"
                        >
                        <ImageView

                            android:id="@+id/tv_favorite_deals_count"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/categories_food_icon_user"
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:layout_marginLeft="15dp"
                            android:textColor="@color/colorWhite"
                            />

                    </LinearLayout>



                    <TextView
                        android:id="@+id/tv_favorite"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="CATEGORY FOOD"
                        android:textColor="@color/color_txt"
                        android:textSize="10sp" />


                </LinearLayout>

                <TextView
                    android:id="@+id/tv_vertical_line2"
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/colorGray" />


                <LinearLayout
                    android:id="@+id/ll_followers"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">


                    <TextView
                        android:id="@+id/tv_store_follwed_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/textview_background"
                        android:gravity="center"
                        android:text="04"
                        android:textColor="@color/colorWhite"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/tv_store_followed"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="FOLLOWERS"
                        android:textColor="@color/color_txt"
                        android:textSize="10sp" />


                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_following_followers"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ll_trans_favorite_stores_fpllowed"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="20dp"
                android:orientation="horizontal"
                android:weightSum="2">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:background="@drawable/light_red_bg2"
                    android:gravity="center"
                    android:padding="5dp"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/tv_following"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Rate Us "
                        android:textColor="@android:color/white"
                        app:fontFamily="@font/montserrat" />

                    <RatingBar
                        android:layout_marginLeft="5dp"
                        android:layout_gravity="center"
                        style="?android:attr/ratingBarStyleSmall"
                        android:numStars = "5"
                        android:outlineSpotShadowColor="@android:color/white"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:theme="@style/RatingBar"
                        android:rating="3"/>

                </LinearLayout>



                <TextView
                    android:id="@+id/tv_followers"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/right_red_bg"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="Follow Us"
                    android:textColor="@android:color/white"
                    app:fontFamily="@font/montserrat" />


            </LinearLayout>


            <android.support.v7.widget.CardView
                android:id="@+id/cv_profile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ll_following_followers"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="10dp"
                android:elevation="4dp"
                card_view:cardCornerRadius="8dp"
                card_view:cardElevation="6dp">


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                    <TextView
                        android:id="@+id/tv_personal_info"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/colorGray"
                        android:gravity="center"
                        android:padding="8dp"
                        android:textStyle="bold"

                        android:text="CONTACT INFORMATION"
                        android:textColor="@color/colorWhite" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_personal_info"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:orientation="vertical"
                        android:padding="10dp">


                        <LinearLayout
                            android:id="@+id/ll_full_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:layout_width="14dp"
                                android:layout_height="14dp"
                                android:layout_marginTop="3dp"
                                android:src="@drawable/arrow_bullet_user" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1.3"
                                android:fontFamily="@font/montserrat"
                                android:text="Vendor Name"
                                android:textColor="@color/color_txt" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/montserrat"
                                android:text=":"
                                android:textColor="@color/color_txt" />


                            <TextView
                                android:layout_width="0dp"
                                android:layout_weight="2"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/montserrat"
                                android:layout_marginLeft="20dp"
                                android:text="Jason Smith"
                                android:textColor="@color/color_txt" />


                        </LinearLayout>


                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="15dp"
                            android:src="@drawable/side_menu_dotted_sep_user" />


                        <LinearLayout
                            android:id="@+id/ll_gender"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:id="@+id/iv_arrow_bullet"
                                android:layout_width="14dp"
                                android:layout_height="14dp"
                                android:layout_marginTop="3dp"
                                android:src="@drawable/arrow_bullet_user" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1.3"
                                android:fontFamily="@font/montserrat"
                                android:text="Email"
                                android:textColor="@color/color_txt" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/montserrat"
                                android:text=":"
                                android:textColor="@color/color_txt" />


                            <TextView
                                android:layout_width="0dp"
                                android:layout_weight="2"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/montserrat"
                                android:layout_marginLeft="15dp"
                                android:text="janson.john@gmail.com"
                                android:textColor="@color/color_txt" />


                        </LinearLayout>

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="20dp"
                            android:src="@drawable/side_menu_dotted_sep_user" />

                        <LinearLayout
                            android:id="@+id/ll_mobile_no"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:layout_width="14dp"
                                android:layout_height="14dp"
                                android:layout_marginTop="3dp"
                                android:src="@drawable/arrow_bullet_user" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1.3"
                                android:fontFamily="@font/montserrat"
                                android:text="Mobile No."
                                android:textColor="@color/color_txt" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/montserrat"
                                android:text=":"
                                android:textColor="@color/color_txt" />


                            <TextView
                                android:layout_width="0dp"
                                android:layout_weight="2"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/montserrat"
                                android:layout_marginLeft="15dp"
                                android:text="19089790897"
                                android:textColor="@color/color_txt" />


                        </LinearLayout>


                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="20dp"
                            android:src="@drawable/side_menu_dotted_sep_user"/>


                        <LinearLayout
                            android:id="@+id/ll_email"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:layout_width="14dp"
                                android:layout_height="14dp"
                                android:layout_marginTop="3dp"
                                android:src="@drawable/arrow_bullet_user" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1.3"
                                android:fontFamily="@font/montserrat"
                                android:text="Website"
                                android:textColor="@color/color_txt" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/montserrat"
                                android:text=":"
                                android:textColor="@color/color_txt" />


                            <TextView
                                android:layout_width="0dp"
                                android:layout_weight="2"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/montserrat"
                                android:layout_marginLeft="15dp"
                                android:text="www.burgerbar.com"
                                android:textColor="@color/color_txt" />


                        </LinearLayout>


                    </LinearLayout>




                </RelativeLayout>


            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ll_following_followers"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="10dp"
                android:elevation="4dp"
                card_view:cardCornerRadius="8dp"
                card_view:cardElevation="6dp">


                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/colorGray"
                        android:gravity="center"
                        android:padding="8dp"
                        android:textStyle="bold"

                        android:text="LOCATION"
                        android:textColor="@color/colorWhite" />



                    <RelativeLayout
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_margin="10dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <LinearLayout
                            android:id="@+id/parent_ll"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                           <!-- <com.github.siyamed.shapeimageview.RoundedImageView
                                android:layout_width="120dp"
                                android:layout_height="120dp"
                                android:src="@drawable/deal_details_cover_image_user"
                                app:siRadius="6dp"
                                app:siBorderWidth="6dp"
                                app:siBorderColor="@android:color/white"
                                app:siSquare="true"/>-->


                            <android.support.v7.widget.CardView
                                android:layout_width="120dp"
                                android:layout_height="120dp"
                                android:layout_below="@+id/ll_following_followers"
                                android:elevation="4dp"
                                card_view:cardCornerRadius="10dp"
                                card_view:cardElevation="6dp">


                                <fragment
                                    android:id="@+id/map"
                                    android:name="com.google.android.gms.maps.SupportMapFragment"
                                    android:layout_width="120dp"
                                    android:layout_height="120dp"/>

                            </android.support.v7.widget.CardView>>


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="0dp"
                                android:orientation="vertical"
                                android:layout_marginLeft="5dp">

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">
                                    <TextView
                                        android:layout_marginTop="10dp"
                                        android:fontFamily="@font/montserrat"
                                        android:layout_alignParentLeft="true"

                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textSize="14dp"
                                        android:textStyle="bold"
                                        android:textColor="@color/colorDarkRed"
                                        android:text="Burger Bar"/>



                                </RelativeLayout>

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textSize="12sp"
                                    android:fontFamily="@font/montserrat"
                                    android:text="New York, USA"
                                    />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textSize="12sp"
                                    android:fontFamily="@font/montserrat"
                                    android:text="101 Main street, Main Avenue"
                                    />


                                <RelativeLayout

                                    android:id="@+id/rl_view_map"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:layout_marginBottom="20dp">
                                    <TextView
                                        android:layout_width="100dp"
                                        android:layout_height="30dp"
                                        android:text="View Map"
                                        android:gravity="center"
                                        android:layout_alignParentLeft="true"
                                        android:layout_gravity="center"
                                        android:background="@drawable/button_red_background"
                                        android:layout_marginTop="10dp"
                                        android:textSize="13sp"
                                        android:textColor="@android:color/white"
                                        android:textStyle="bold"
                                        android:fontFamily="@font/montserrat"

                                        />



                                </RelativeLayout>



                            </LinearLayout>
                        </LinearLayout>


                    </RelativeLayout>




                </LinearLayout>


            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ll_following_followers"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="16dp"
                android:elevation="4dp"
                card_view:cardCornerRadius="8dp"
                card_view:cardElevation="6dp">


                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/colorGray"
                        android:gravity="center"
                        android:padding="8dp"
                        android:text="MENU"
                        android:textStyle="bold"

                        android:textColor="@color/colorWhite" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:weightSum="5"
                        android:orientation="horizontal">


                        <com.github.siyamed.shapeimageview.RoundedImageView
                            android:id="@+id/iv_about_vendor_menu_thumbnail_user1"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:scaleType="fitXY"
                            android:src="@drawable/about_vendor_menu_thumbnail_user"
                            app:siRadius="6dp"
                            app:siBorderWidth="6dp"
                            app:siBorderColor="@android:color/white"
                            app:siSquare="true"/>


                        <com.github.siyamed.shapeimageview.RoundedImageView
                            android:id="@+id/iv_about_vendor_menu_thumbnail_user2"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:scaleType="fitXY"
                            android:src="@drawable/about_vendor_menu_thumbnail_user"
                            app:siRadius="6dp"
                            app:siBorderWidth="6dp"
                            app:siBorderColor="@android:color/white"
                            app:siSquare="true"/>


                        <com.github.siyamed.shapeimageview.RoundedImageView
                            android:id="@+id/iv_about_vendor_menu_thumbnail_user3"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:scaleType="fitXY"
                            android:src="@drawable/about_vendor_menu_thumbnail_user"
                            app:siRadius="6dp"
                            app:siBorderWidth="6dp"
                            app:siBorderColor="@android:color/white"
                            app:siSquare="true"/>


                        <com.github.siyamed.shapeimageview.RoundedImageView
                            android:id="@+id/iv_about_vendor_menu_thumbnail_user4"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:scaleType="fitXY"
                            android:src="@drawable/about_vendor_menu_thumbnail_user"
                            app:siRadius="6dp"
                            app:siBorderWidth="6dp"
                            app:siBorderColor="@android:color/white"
                            app:siSquare="true"/>


                        <com.github.siyamed.shapeimageview.RoundedImageView
                            android:id="@+id/iv_about_vendor_menu_thumbnail_user5"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:scaleType="fitXY"
                            android:src="@drawable/about_vendor_menu_thumbnail_user"
                            app:siRadius="6dp"
                            app:siBorderWidth="6dp"
                            app:siBorderColor="@android:color/white"
                            app:siSquare="true"/>


                    </LinearLayout>


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:padding="8dp"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:text="TAP THE IMAGE TO ZOOM"
                        android:textColor="@color/colorDarkRed"/>


                </LinearLayout>


            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ll_following_followers"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="10dp"
                android:elevation="4dp"
                card_view:cardCornerRadius="8dp"
                card_view:cardElevation="6dp">


                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/colorGray"
                        android:gravity="center"
                        android:padding="8dp"
                        android:textStyle="bold"
                        android:text="ABOUT US"
                        android:textColor="@color/colorWhite" />

                    <TextView
                        android:padding="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserrat"
                        android:text="@string/dummy_txt"
                         />



                </LinearLayout>


            </android.support.v7.widget.CardView>



        </LinearLayout>



    </ScrollView>

</LinearLayout>